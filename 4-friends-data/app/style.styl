body
  font-size 1em

.block-list
  display block
  width 456px
  padding 0
  margin 0

.comment-block > li
  border 1px solid #b1b2b4
  padding 0.75em

.comment-block > li:first-child
  border-top-width 1px

.block-list li
  display block
  width 100%
  box-sizing border-box
  list-style none
  border-top-width 0

.secondary-dark
  color mediumblue


.list-meta
  display block
  padding 0
  margin 0

.list-meta li
  display inline
  vertical-align top

.button
  display inline-block
  margin-bottom 0
  text-align center
  vertical-align middle
  border 0
  font-size 0.9em
  line-height 1.5em
  cursor pointer
  background #222
  color #fff
  text-decoration: none
  padding .25em .75em

.image-avatar
  float right
  margin 0 0 0 5px

.clearfix:after
  content ''
  display table
  clear both

.person-like
  box-shadow: inset 5px 0 0 0 forestgreen
.person-block
  box-shadow: inset 5px 0 0 0 yellow;
.person-ignore
  box-shadow: inset 5px 0 0 0 darkred;


